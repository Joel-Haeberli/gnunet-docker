#!/bin/bash

docker run --rm -ti --name gnunet -h gnunet \
	--cap-add=NET_ADMIN --cap-add=NET_BROADCAST --device=/dev/net/tun \
	-e DISPLAY=${DISPLAY} \
	-v /tmp/.X11-unix:/tmp/.X11-unix \
    -v <local folder 1>:/home/user \
    -v <local folder 2>:/var/lib/gnunet \
	-p 0.0.0.0:2086:2086 \
	-p 0.0.0.0:1080:1080 \
	bfix/gnunet
